    <link rel="stylesheet" href="/stylesheets/Cart/cart.css">
    <link rel="stylesheet" href="/stylesheets/Index/style.css">
    <title>Cart</title>
</head>
<body>

    <!--========== HEADER ==========-->
    <header class="l-header" id="header">
        <nav class="nav bd-container">
            <a href="/" class="nav__logo">logo.</a>

            <div class="nav__menu" id="nav-menu">
                <ul class="nav__list">
                    <li class="nav__item"><a href="/" class="nav__link">Home</a></li>
                    <li class="nav__item"><a href="/bookTable" class="nav__link">Book Table</a></li>
                    <li class="nav__item"><a href="/menu" class="nav__link">Menu</a></li>
                    <li class="nav__item"><a href="/aboutUs" class="nav__link">About Us</a></li>
                    <li class="nav__item"><a href="/contact" class="nav__link">Contact</a></li>
                    <li class="nav__item"><a href="/cart" class="nav__link active-link"><i class="ri-shopping-cart-line"></i></a></li>
                </ul>
            </div>

            <div class="nav__toggle" id="nav-toggle">
                <i class='bx bx-menu'></i>
            </div>
        </nav>
    </header>


<div class="main">

    <div class="main__cart">
        <div class="cartHeader">
            <div class="left">
                <h1>Cart</h1>
                <p>Your delicious order</p>
            </div>
            <div class="right">
                <button class="pay">Pay Now</button>
            </div>
        </div>

        <% orderitem.forEach(function(itemdetail){ %>
        <div class="cartItems">
            <div class="left">
                <h3><%=itemdetail.title%></h3>
                <p>Qty. 1</p>
            </div>
            <div class="right">
               <span>- </span><h3> â‚¹ <%=itemdetail.price%></h3> <span>+ </span> <i class="ri-delete-bin-line"></i>
            </div>
        </div>
        <% }) %>

        <button class="order">Order</button>
    </div>
</div>

